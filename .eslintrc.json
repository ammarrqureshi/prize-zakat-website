{
  "extends": ["next/core-web-vitals", "prettier", "plugin:react/recommended"],
  "plugins": ["react", "prettier", "import"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "react/prop-types": "off", // Disables prop-types validation
    "react/react-in-jsx-scope": "off" // Disables the need for React in JSX scope
  }
}
